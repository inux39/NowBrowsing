{
    "manifest_version": 2,
    "name": "Now Browsing",
    "version": "0.1.4rc2",
    "author": "inux39",
    "applications": {
        "gecko": {
            "id": "{6bb57211-7ad3-4891-a859-9c4961e6a903}"
        }
    },

    "description": "Now Browsing",
    "homepage_url": "https://github.com/inux39/NowBrowsing",
    "icons": {
        "32": "src/img/icon_32.png",
        "48": "src/img/icon_48.png"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "identity",
        "unlimitedStorage"
    ],

    "browser_action": {
        "default_icon": "src/img/icon_32.png",
        "default_title": "Now Browsing",
        "default_popup": "src/index.html"
    },

    "options_ui": {
        "page": "src/settings.html",
        "open_in_tab": true,
        "browser_style": true
    }
}

